<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hu.oneclick.dao.ViewDao">
    <!--开启缓存-->
    <cache eviction="FIFO" flushInterval="60000" size="1024" readOnly="true" />

    <resultMap type="com.hu.oneclick.model.domain.View" id="ViewMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="createUserId" column="create_user_id" jdbcType="INTEGER"/>
        <result property="projectId" column="project_id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="scopeName" column="scope_name" jdbcType="VARCHAR"/>
        <result property="isPrivate" column="is_private" jdbcType="INTEGER"/>
        <result property="creater" column="creater" jdbcType="VARCHAR"/>
        <result property="filter" column="filter" jdbcType="VARCHAR"/>
        <result property="updateUser" column="update_user" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="parentId" column="parent_id" jdbcType="VARCHAR"/>
        <result property="level" column="level" jdbcType="VARCHAR"/>
        <result property="scopeId" column="scope_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="base_sql">
        id, create_user_id, project_id, title, `scope_name`, is_private, creater, filter, `sql`, update_user,create_time, update_time,parent_id,`level`
    </sql>
    <!--查询单个-->
    <select id="queryById" resultMap="ViewMap">
        select
          id, create_user_id, project_id, title, scope_name, is_private, creater, filter, update_user, create_time, update_time,parent_id,`level`
        from oneclick.view
        where id = #{id} and create_user_id = #{masterId}
    </select>

    <!--查询单个-->
    <select id="queryOnlyById" resultMap="ViewMap">
        select
        <include refid="base_sql"></include>
        from oneclick.view
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ViewMap">
        select
          id, create_user_id, project_id, title, scope_name, is_private, creater, filter, update_user, create_time, update_time,parent_id,`level`
        from oneclick.view
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ViewMap">
        select
        id, create_user_id, project_id, title, scope_name, is_private, creater,filter ,update_user, create_time,
        update_time,parent_id,`level`
        from oneclick.view
        <where>
            (create_user_id = #{createUserId} and is_private = 1 and scope_name = #{scopeName})
            or is_private = 0
            and project_id = #{projectId}
            <if test="title != null and title != ''">
                and title like concat('%',#{title},'%')
            </if>
            <if test="scopeName != null and scopeName != ''">
                and scope_name = #{scopeName}
            </if>
        </where>
        order by create_time desc
    </select>
    <select id="queryTitleIsExist" resultType="java.lang.Integer">
        select
            count(1)
        from oneclick.view
        where
        create_user_id = #{masterId}
            and project_id = #{projectId}
            and scope_name = #{scopeName}
            and title = #{title}
            <!-- and is_private = #{isPrivate}-->
    </select>
    <select id="queryViewParents" resultType="com.hu.oneclick.model.domain.View">
        select
        title,
        id
        from oneclick.view
        <where>
            (create_user_id = #{masterId} and is_private = 1 and project_id=#{projectId} and scope_name = #{scopeName}
            and level=0)
            or (is_private = 0 and project_id = #{projectId} and scope_name = #{scopeName} and level =0)
        </where>
    </select>
    <select id="queryTitleByParentId" resultType="java.lang.String">
        select
        title
        from oneclick.view
        where id = #{parentId}
    </select>



